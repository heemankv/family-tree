# Family Tree - Docker Environment Variables
# Copy this file to .env and adjust values for your deployment

# =============================================================================
# Neo4j Database
# =============================================================================
NEO4J_AUTH=neo4j/your_secure_password_here
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_secure_password_here

# =============================================================================
# Backend API
# =============================================================================
# Port to expose backend on host (change if 8080 is in use)
BACKEND_PORT=8080

# Gin mode: debug or release
GIN_MODE=release

# Admin token for protected endpoints (CSV upload)
ADMIN_TOKEN=your_secure_admin_token_here

# Rate limiting for query endpoint
RATE_LIMIT_REQUESTS=5
RATE_LIMIT_WINDOW_SECONDS=60

# CORS allowed origins (comma-separated)
# For production, set to your actual domain
ALLOWED_ORIGINS=http://localhost:3000

# =============================================================================
# Frontend
# =============================================================================
# Port to expose frontend on host (change if 3000 is in use)
FRONTEND_PORT=3000

# API URL that the frontend will use to connect to backend
# For local Docker: http://localhost:8080 (or http://localhost:BACKEND_PORT)
# For production: https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://localhost:8080
